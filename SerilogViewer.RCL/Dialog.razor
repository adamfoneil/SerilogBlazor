@if (!Visible) return;

<dialog>
	<div class="dialog-header">
		<div>@Title</div>
		<button type="button" class="close-button" onclick="this.closest('dialog').close();">×</button>
	</div>
	<div>
		@ChildContent
	</div>	
	<div class="dialog-footer">
		<button type="button">OK</button>
		<button type="button" onclick="this.closest('dialog').close();">Cancel</button>
	</div>
</dialog>

@code {
	[Parameter]
	public bool Visible { get; set; } = false;

	[Parameter]
	public EventCallback<bool> VisibleChanged { get; set; }

	[Parameter]
	public string Title { get; set; } = "Dialog Title";

	[Parameter] 
	public string? Width { get; set; } = "500px";

	[Parameter] 
	public string? Height { get; set; } = "400px";

	[Parameter]
	public RenderFragment ChildContent { get; set; } = @<span>No content defined</span>;

	[Parameter]
	public EventCallback ClickedOK { get; set; }
}