@using SerilogBlazor.Abstractions
@using System.Text.Json
<div class="serilog-grid">
    <!-- Header Row -->
    <div class="serilog-grid-header">
        <div class="header-cell">ID</div>
        <div class="header-cell">Timestamp/Age</div>
        <div class="header-cell">Source Context</div>
        <div class="header-cell">Request ID</div>
        <div class="header-cell">Level</div>        
        <div class="header-cell">Message</div>
        <div class="header-cell"></div>        
    </div>

    <!-- Data Rows -->
    @foreach (var entry in Entries)
    {
        <div class="serilog-grid-row @(expandedRows.Contains(entry.Id) ? "expanded" : "")">
            <div class="data-cell">@entry.Id</div>
            <div class="data-cell">
                @entry.Timestamp.ToString("yyyy-MM-dd HH:mm:ss") - @entry.AgeText
            </div>
            <div class="data-cell">@entry.SourceContext</div>
            <div class="data-cell">
                @if (!string.IsNullOrWhiteSpace(entry.RequestId))
                {
                    <button class="request-id-button" @onclick="@(() => OnRequestIdClicked(entry.RequestId))">
                        @entry.RequestId
                    </button>
                }
            </div>
            <div class="data-cell level-@entry.Level.ToLower()">@entry.Level</div>            
            <div class="data-cell">@entry.Message</div>            
            <div class="data-cell expand-cell">
                <button class="expand-button" @onclick="@(() => ToggleExpand(entry.Id))">
                    @(expandedRows.Contains(entry.Id) ? "▼" : "▶")
                </button>
            </div>
        </div>

        @if (expandedRows.Contains(entry.Id))
        {
            <div class="serilog-grid-details">
                @if (!string.IsNullOrWhiteSpace(entry.Exception))
                {
                    <div class="detail-section">
                        <h4>Exception:</h4>
                        <pre class="exception-text">@entry.Exception</pre>
                    </div>
                }
                
                @if (entry.Properties?.Any() == true)
                {
                    <div class="detail-section">
                        @if (IsEfCoreCommand(entry))
                        {
                            <div class="ef-core-controls">
                                <h4>Properties:</h4>
                                <label class="ef-core-toggle">
                                    <input type="checkbox" @bind="efCoreOptimizedView[entry.Id]" />
                                    Optimize for EF Core Query
                                </label>
                            </div>
                            
                            @if (GetEfCoreOptimizedState(entry.Id))
                            {
                                @RenderEfCoreOptimized(entry)
                            }
                            else
                            {
                                @RenderPropertiesGrid(entry)
                            }
                        }
                        else
                        {
                            <h4>Properties:</h4>
                            @RenderPropertiesGrid(entry)
                        }
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    [Parameter] public IEnumerable<SerilogEntry> Entries { get; set; } = [];
    [Parameter] public EventCallback<string> RequestIdClicked { get; set; }
    
    private HashSet<int> expandedRows = new();
    private Dictionary<int, bool> efCoreOptimizedView = new();
    
    private void ToggleExpand(int entryId)
    {
        if (expandedRows.Contains(entryId))
        {
            expandedRows.Remove(entryId);
        }
        else
        {
            expandedRows.Add(entryId);
        }
    }

    private async Task OnRequestIdClicked(string requestId)
    {
        await RequestIdClicked.InvokeAsync(requestId);
    }

    private bool IsEfCoreCommand(SerilogEntry entry)
    {
        return entry.SourceContext == "Microsoft.EntityFrameworkCore.Database.Command";
    }

    private bool GetEfCoreOptimizedState(int entryId)
    {
        return efCoreOptimizedView.TryGetValue(entryId, out var value) && value;
    }

    private string FormatPropertyValue(object? value)
    {
        if (value == null) return string.Empty;
        
        var valueStr = value.ToString();
        if (string.IsNullOrWhiteSpace(valueStr)) return valueStr ?? string.Empty;
        
        // Try to parse and format as JSON
        try
        {
            using var doc = JsonDocument.Parse(valueStr);
            return JsonSerializer.Serialize(doc, new JsonSerializerOptions { WriteIndented = true });
        }
        catch
        {
            // Not JSON or invalid JSON, return as-is
            return valueStr;
        }
    }

    private RenderFragment RenderPropertiesGrid(SerilogEntry entry) => __builder =>
    {
        <div class="properties-grid">
            @foreach (var prop in entry.Properties)
            {
                <div class="property-key">@prop.Key:</div>
                <div class="property-value">
                    @{
                        var formattedValue = FormatPropertyValue(prop.Value);
                        if (formattedValue.Contains('\n'))
                        {
                            <pre class="json-formatted">@formattedValue</pre>
                        }
                        else
                        {
                            @formattedValue
                        }
                    }
                </div>
            }
        </div>
    };

    private RenderFragment RenderEfCoreOptimized(SerilogEntry entry) => __builder =>
    {
        var (commandText, parameters) = ExtractEfCoreData(entry);
        
        <div class="ef-core-optimized">
            @if (!string.IsNullOrEmpty(commandText))
            {
                <div class="ef-core-section">
                    <h5>Command Text:</h5>
                    <pre class="ef-core-sql">@UnescapeSql(commandText)</pre>
                </div>
            }
            
            @if (!string.IsNullOrEmpty(parameters))
            {
                <div class="ef-core-section">
                    <h5>Parameters:</h5>
                    <pre class="ef-core-parameters">@FormatPropertyValue(parameters)</pre>
                </div>
            }
            
            @if (string.IsNullOrEmpty(commandText) && string.IsNullOrEmpty(parameters))
            {
                <div class="ef-core-section">
                    <p class="ef-core-not-found">No commandText or parameters found in properties.</p>
                </div>
            }
        </div>
    };

    private (string? commandText, string? parameters) ExtractEfCoreData(SerilogEntry entry)
    {
        string? commandText = null;
        string? parameters = null;

        foreach (var prop in entry.Properties)
        {
            var valueStr = prop.Value?.ToString();
            if (string.IsNullOrWhiteSpace(valueStr)) continue;

            try
            {
                using var doc = JsonDocument.Parse(valueStr);
                var root = doc.RootElement;

                // Try to find commandText
                if (root.TryGetProperty("commandText", out var cmdTextElement))
                {
                    commandText = cmdTextElement.GetString();
                }

                // Try to find parameters
                if (root.TryGetProperty("parameters", out var paramsElement))
                {
                    parameters = JsonSerializer.Serialize(paramsElement, new JsonSerializerOptions { WriteIndented = true });
                }

                // If we found both, we can stop searching
                if (commandText != null && parameters != null)
                {
                    break;
                }
            }
            catch
            {
                // Not JSON or doesn't have the properties we're looking for
                continue;
            }
        }

        return (commandText, parameters);
    }

    private string UnescapeSql(string sql)
    {
        if (string.IsNullOrEmpty(sql)) return sql;
        
        // Unescape common JSON escape sequences
        // Use a unique placeholder that won't appear in SQL to handle escaped backslashes correctly
        const string BACKSLASH_PLACEHOLDER = "___ESCAPED_BACKSLASH___";
        
        var unescaped = sql
            .Replace("\\\\", BACKSLASH_PLACEHOLDER) // Temporary placeholder for escaped backslash
            .Replace("\\n", "\n")
            .Replace("\\r", "\r")
            .Replace("\\t", "\t")
            .Replace("\\\"", "\"")
            .Replace("\\'", "'")
            .Replace(BACKSLASH_PLACEHOLDER, "\\"); // Replace placeholder with single backslash
        
        return unescaped;
    }
}